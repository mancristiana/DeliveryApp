              	<MenuItem mnemonicParsing="false" text="Trucks" />
               <MenuItem mnemonicParsing="false" text="Drivers" />
            </items>
          </Menu>
          <Menu fx:id="orderOverviewButton" mnemonicParsing="false" onAction="#showOrderOverview" text="Order Overview">
               <items>
                  <RadioMenuItem mnemonicParsing="false" onAction="#showOrderOverview" text="Unspecified Action" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Generate route" />
        </menus>
      </MenuBar>
   </top>
