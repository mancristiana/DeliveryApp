<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="page-container" minWidth="400" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.kea.swc.cadd.delivery.view.manage.DriverDialogController">
	<center>
		<GridPane prefHeight="75.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" />
				<ColumnConstraints hgrow="SOMETIMES" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Name"			GridPane.rowIndex="0" />
				<Label text="Phone"			GridPane.rowIndex="1" />
				<Label text="Email" 		GridPane.rowIndex="2" />
				<Label text="Available"		GridPane.rowIndex="3" />
				<TextField fx:id="nameField" 		GridPane.columnIndex="1" GridPane.rowIndex="0" />
				<TextField fx:id="phoneField" 		GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<TextField fx:id="emailField" 		GridPane.columnIndex="1" GridPane.rowIndex="2" />
				<CheckBox  fx:id="availableBox" 	GridPane.columnIndex="1" GridPane.rowIndex="3" />
			</children>
		</GridPane>
	</center>
	<top>	
		<Label id="page-title" text="Driver" />
	</top>
	<bottom>
		<HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
			<children>
				<Button mnemonicParsing="false" onAction="#handleOk" text="Ok">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
				<Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
			</children>
		</HBox>
	</bottom>
	<stylesheets>
		<URL value="@../resources/General.css" />
	</stylesheets>
</BorderPane>