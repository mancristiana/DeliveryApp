<?import javafx.scene.layout.*?>

<BorderPane id="page-container" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.kea.swc.cadd.delivery.view.orders.OrderOverviewController">
   <center>
      <TableView fx:id="orderTable">
         <columns>
            <TableColumn fx:id="orderIDColumn" text="ID" />
            <TableColumn fx:id="cityNameColumn" text="Location" />
            <TableColumn fx:id="quantityColumn" text="Requested quantity (tons)" />
            <TableColumn fx:id="editColumn" text="Edit" prefWidth="55" sortable="false" />
            <TableColumn fx:id="deleteColumn" text="Delete" prefWidth="55" sortable="false" />
         </columns>
      </TableView>
   </center>
   <top>
		<Label id="page-title" text="Order Overview" />
   </top>
</BorderPane>
