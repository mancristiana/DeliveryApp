<BorderPane prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.kea.swc.cadd.delivery.view.RouteCreateController">
   <center>
      <TableView fx:id="orderTable" prefHeight="179.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <columns>
         	<TableColumn fx:id="selectColumn" />
            <TableColumn fx:id="orderIDColumn" text="Nr" />
            <TableColumn fx:id="cityNameColumn" text="Location" />
            <TableColumn fx:id="quantityColumn" text="Req Q (tons)" />
            <TableColumn fx:id="priceColumn" text="Price" />
            <TableColumn fx:id="profitColumn" text="Profit" />
         </columns>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCreate" text="Create" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         
      </HBox>
   </bottom>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="35.0" prefWidth="197.0" text="Generate route">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
